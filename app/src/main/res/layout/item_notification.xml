<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/std_indention"
    android:layout_marginTop="@dimen/std_indention"
    android:layout_marginEnd="@dimen/std_indention"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/std_indention">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_notification_title"
                style="@style/lrg_titles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Notification title" />

            <TextView
                android:id="@+id/item_notification_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10.04.2020"
                android:textSize="@dimen/std_textsize"
                android:layout_gravity="end"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_notification_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:ellipsize="end"
            android:textSize="@dimen/std_textsize"
            tools:text="There is course description and support information in the card." />

    </LinearLayout>
</androidx.cardview.widget.CardView>
