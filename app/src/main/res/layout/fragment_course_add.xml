<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/std_indention">

    <EditText
        android:id="@+id/fragment_course_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_course_name"
        android:inputType="textPersonName"
        android:importantForAutofill="no"
        android:layout_margin="@dimen/std_indention"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/fragment_course_add_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_desc"
        android:inputType="textMultiLine"
        android:importantForAutofill="no"
        android:layout_margin="@dimen/std_indention"
        android:maxLines="10"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_course_add_name"/>

    <EditText
        android:id="@+id/fragment_course_add_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/hint_course_period"
        android:importantForAutofill="no"
        android:layout_margin="@dimen/std_indention"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_course_add_desc"/>

    <Button
        android:id="@+id/fragment_course_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_indention"
        android:background="@color/colorPrimary"
        android:text="@string/add_course"
        android:textSize="@dimen/std_textsize"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_course_add_period"/>

</androidx.constraintlayout.widget.ConstraintLayout>
