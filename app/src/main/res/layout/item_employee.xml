<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/std_indention"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_employee_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/item_employee_no_photo_desc"
        android:layout_marginStart="@dimen/std_indention"
        android:layout_marginEnd="@dimen/std_indention"
        android:minWidth="56dp"
        android:minHeight="56dp"
        android:maxWidth="192dp"
        android:maxHeight="192dp"/>

    <TextView
        android:id="@+id/item_employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/std_indention"
        android:layout_gravity="center_vertical"
        android:textSize="18sp" />

</LinearLayout>
