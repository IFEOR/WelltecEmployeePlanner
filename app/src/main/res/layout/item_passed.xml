<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/std_indention"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_passed_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/std_indention"
        android:textSize="@dimen/std_textsize"
        tools:text="BOSIET"/>

    <TextView
        android:id="@+id/item_passed_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/std_indention"
        android:text="@string/txt_space"
        tools:text="  "/>

    <TextView
        android:id="@+id/item_passed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/std_indention"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/std_textsize"
        tools:text="19.04.2020"/>

</LinearLayout>
